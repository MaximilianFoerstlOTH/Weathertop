doctype html
html(lang="de")
    head
        meta(charset="UTF-8")
        meta(name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no")
        link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css")
        link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.2/font/bootstrap-icons.css")
        link(rel="stylesheet" href="/styles/styles.css")
        block head
    body
        nav(class="navbar navbar-expand-md navbar-dark bg-dark")
            div(class="container-fluid")
                if(session !== undefined)
                    ul(class="nav")
                        li(class="nav-item")
                            a(class="nav-link active" href="/") Weathertop
                        li(class="nav-item")
                            a(class="nav-link active" href="/dashboard") Dashboard
                else
                    ul(class="nav")
                        li(class="nav-item")
                            a(class="nav-link active" href="/") Weathertop
                if(session === undefined)
                    ul(class="nav ml-auto")
                        li(class="navbar-item ml-auto bg-primary")
                            a(class="nav-link active" id="login" href="/") Login
                        li(class="navbar-item ml-auto")
                            a(class="nav-link active" href="/signup") Registrieren
                else
                    ul(class="nav ml-auto")
                        li(class="navbar-item ml-auto bg-primary")
                        a(class="nav-link active" id="logout" href="/logout") Logout


        div(class="with_margin")
            block body

        script(src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous")
        script(src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous")
        script(src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous")

